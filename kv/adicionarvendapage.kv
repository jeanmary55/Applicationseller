<Adicionarvendapage>:
  FloatLayout:
    canvas:
      Rectangle:
        size:self.size
        pos:self.pos
        source: "icones/bg1.png"
    
    Label:
      pos_hint: {"right": 1, "top":1}
      size_hint: 1, 0.05
      text: "Selecionar o cliente"
      id: selecionar_venda
    
    ScrollView:
      pos_hint: {"right": 1, "top":0.95}
      size_hint: 1, 0.15
      GridLayout:
        rows: 1
        id: lista_cliente
        size_hint_x: None
        width: self.minimum_width
        col_default_width: "100dp"
        col_force_default: True

    Label:
      pos_hint: {"right": 1, "top":0.75}
      size_hint: 1, 0.05
      text: "Selecionar o Produto"
      id: selecionar_produto
    
    ScrollView:
      pos_hint: {"right": 1, "top":0.7}
      size_hint: 1, 0.15
      GridLayout:
        rows: 1
        id: lista_produto
        size_hint_x: None
        width: self.minimum_width
        col_default_width: "100dp"
        col_force_default: True
    
    Label:
      pos_hint: {"right": 1, "top":0.5}
      size_hint: 1, 0.05
      text: "Data: 01/01/2021"
      id: data_venda
      bold: True

    GridLayout:
      pos_hint: {"right": 0.9, "top":0.45}
      size_hint: 0.8, 0.1
      rows: 1
      
      LabelButton:
        text: "kg"
        id: unidades_kg
        on_release: app.selecionar_unidade("unidades_kg")

      LabelButton:
        text: "unidade"
        id: unidades_unidades
        on_release: app.selecionar_unidade("unidades_unidades")
        
      
      LabelButton:
        text: "Litros"
        id: unidades_litros
        on_release: app.selecionar_unidade("unidades_litros")
    

    LabelButton:
      
      canvas.before:
        Rectangle:
          pos: self.pos
          size: self.size
          source: "icones/botao.png"if self.state == "normal" else "icones/botao_apertado.png"
      text: "Cancelar"
      pos_hint: {"right": 0.45, "top":0.2}
      size_hint: 0.4, 0.2
      on_release: app.mudar_pagina("homepage")
      

    LabelButton:
      
      canvas.before:
        Rectangle:
          pos: self.pos
          size: self.size
          source: "icones/botao.png"
      text: "Adicionar Venda"
      pos_hint: {"right": 0.95, "top":0.2}
      size_hint: 0.4, 0.2
      on_release: app.adicionar_venda()

  
  
    GridLayout:
      pos_hint: {"right": 0.9, "top":0.355}
      size_hint: 0.8, 0.075
      rows: 1
      
      Label:
        text: "Preco Total (R$)"
        id: label_preco
        

      TextInput:
        id: input_nome
        hint_text: "Digite apenas numero"
        id:preco
      
    GridLayout:
      pos_hint: {"right": 0.9, "top":0.275}
      size_hint: 0.8, 0.075
      rows: 1
      
      Label:
        text: "Quantidade Total (R$)"
        id: label_qantidade

      TextInput:
        id: input_qt
        hint_text: "0"
        id: quantidade



      




      
      
    
    