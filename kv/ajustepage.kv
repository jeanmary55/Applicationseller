<Ajustepage>:
  FloatLayout:
    canvas:
      Rectangle:
        size:self.size
        pos:self.pos
        source: "icones/bg1.png"
    
    Label:
      canvas.before:
        Rectangle: 
          size: self.size
          pos:self.pos
          source: "icones/botao_fino.png"
      pos_hint: {"right": 0.85, "top":0.95}
      size_hint: 0.7, 0.2
      text: "Seu ID Ãšnico: 6"
      bold: True
      id: id_vendedor
    
    # mudar de perfil
    ImageButton:
      pos_hint: {"right": 0.5, "top":0.7}
      size_hint: 0.5, 0.15
      source: "icones/foto_perfil.PNG"
      on_release: app.mudar_pagina("mudarperfilpage")
    
    LabelButton:
      pos_hint: {"right": 0.9, "top":0.7}
      size_hint: 0.5, 0.15
      text: "Mudar foto de perfil"
      on_release: app.mudar_pagina("mudarperfilpage")

      
    # Acompanhar vendedor
    ImageButton:
      pos_hint: {"right": 0.5, "top":0.5}
      size_hint: 0.5, 0.15
      source: "icones/adicionar_vendedor.png"
      on_release: app.mudar_pagina("acompanharvendedorpage")
    
    LabelButton:
      pos_hint: {"right": 0.9, "top":0.5}
      size_hint: 0.5, 0.15
      text: "Acompanhar vendedor"
      on_release: app.mudar_pagina("acompanharvendedorpage")
    
    # Ver todas as vendas 
    ImageButton:
      pos_hint: {"right": 0.5, "top":0.3}
      size_hint: 0.5, 0.15
      source: "icones/vendas_empresa.png"
      on_release: app.carregar_todas_vendas()
    
    LabelButton:
      pos_hint: {"right": 0.9, "top":0.3}
      size_hint: 0.5, 0.15
      text: "Ver todas as vendas"
      on_release: app.carregar_todas_vendas()

    FloatLayout:
      pos_hint: {"right": 1, "top":0.12}
      size_hint: 1, 0.12
      canvas:
        Color:
          rgb: utils.get_color_from_hex("#001824")
        Rectangle:
          size:self.size
          pos:self.pos
      
      ImageButton:
        pos_hint: {"right": 0.2, "top":0.9}
        size_hint: 0.2, 0.8
        source: "icones/voltar.png"
        on_release: app.mudar_pagina("homepage")