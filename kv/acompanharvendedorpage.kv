<Acompanharvendedorpage>:
  FloatLayout:
    canvas:
      Rectangle:
        size:self.size
        pos:self.pos
        source: "icones/bg1.png"
    
    Label:  
      pos_hint: {"right": 0.9, "top":0.8}
      size_hint: 0.8, 0.1
      text: "Insirar o [color=#00CFDB]ID do outro vendedor[/color] para acompanh√¢-lo"
      bold: True
      markup: True

    LabelButton:
      
      canvas.before:
        Rectangle:
          pos: self.pos
          size: self.size
          source: "icones/botao.png"if self.state == "normal" else "icones/botao_apertado.png"
      text: "Adicionar vendedor"
      pos_hint: {"right": 0.9, "top":0.55}
      size_hint: 0.8, 0.2
      on_release: app.adicionar_vendedor(id_outro_vendedor.text)


    TextInput:
      pos_hint: {"right": 0.9, "top":0.7}
      size_hint: 0.8, 0.1
      hint_text : "123"
      id: id_outro_vendedor

    Label:
      pos_hint: {"right": 0.9, "top":0.4}
      size_hint: 0.8, 0.1
      text: ""
      id: mensagem_outro_vendedor
      bold: True
      




      

    FloatLayout:
      pos_hint: {"right": 1, "top":0.12}
      size_hint: 1, 0.12
      canvas:
        Color:
          rgb: utils.get_color_from_hex("#001824")
        Rectangle:
          size:self.size
          pos:self.pos
      
      ImageButton:
        pos_hint: {"right": 0.2, "top":0.9}
        size_hint: 0.2, 0.8
        source: "icones/voltar.png"
        on_release: app.mudar_pagina("ajustepage")