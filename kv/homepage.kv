<Homepage>:
  FloatLayout:
    canvas:
      Rectangle:
        size:self.size
        pos:self.pos
        source: "icones/bg1.png"

    Label:
      id: id_vendas
      canvas.before:
        Rectangle: 
          size: self.size
          pos:self.pos
          source: "icones/botao_fino.png"
      pos_hint: {"right": 0.85, "top":0.95}
      size_hint: 0.7, 0.2
      text: "Total de vendas: R$600"
      bold: True
      
    
    ScrollView:
      pos_hint: {"right": 1, "top":0.75}
      size_hint: 1, 0.63
      GridLayout:
        cols: 1
        id: lista_vendas
        size_hint_y: None
        height: self.minimum_height
        row_default_height: "90dp"
        row_force_default: True
      
    
      
    
    GridLayout:
      rows: 1
      pos_hint: {"right": 1, "top":0.12}
      size_hint: 1, 0.12

      canvas:
        Color:
          rgb: utils.get_color_from_hex("#001824")
        Rectangle:
          size: self.size
          pos: self.pos
        

      ImageButton:
        source: "icones/add.png"
        on_release: app.mudar_pagina("adicionarvendapage")

      ImageButton:
        source: "icones/salesman.png"
        on_release: app.mudar_pagina("verlistavendedorespage")

      ImageButton:
        source: "icones/settings.png"
        on_release: app.mudar_pagina("ajustepage")